APP_NAME="DevFlow Pro"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost
APP_TIMEZONE=UTC

# PostgreSQL Production Database Configuration
# DevFlow Pro uses PostgreSQL as the primary database for production
# For local development, you can use the same or a separate PostgreSQL instance
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=devflow_pro
DB_USERNAME=devflow
DB_PASSWORD=your_secure_password_here

# Legacy MySQL Support (for migration reference only)
# If migrating from MySQL, see docs/POSTGRESQL_MIGRATION.md
# MYSQL_HOST=127.0.0.1
# MYSQL_PORT=3306
# MYSQL_DATABASE=devflow_pro
# MYSQL_USERNAME=root
# MYSQL_PASSWORD=

# Cache Configuration
CACHE_STORE=redis
CACHE_PREFIX=devflow_cache

# Queue Configuration
QUEUE_CONNECTION=redis

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Broadcasting
BROADCAST_CONNECTION=reverb

# Redis Configuration
REDIS_CLIENT=predis
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=null
REDIS_PREFIX=devflow_

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=127.0.0.1
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@devflow.pro"
MAIL_FROM_NAME="${APP_NAME}"

# Reverb (WebSocket) Configuration
REVERB_APP_ID=devflow-app
REVERB_APP_KEY=
REVERB_APP_SECRET=
REVERB_HOST=localhost
REVERB_PORT=8080
REVERB_SCHEME=http

# Logging Configuration
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=info

# Filesystem Configuration
FILESYSTEM_DISK=local

# AWS S3 Configuration (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Vite Configuration
VITE_APP_NAME="${APP_NAME}"

# DevFlow Specific Configuration
PROJECTS_PATH=/opt/devflow/projects
BACKUPS_PATH=/opt/devflow/backups
LOGS_PATH=/opt/devflow/logs
SSL_PATH=/opt/devflow/ssl

# Docker Configuration
DOCKER_SOCKET=/var/run/docker.sock
DOCKER_NETWORK=devflow_network

# Nginx Proxy Manager
NGINX_PROXY_MANAGER_URL=http://localhost:81
NGINX_PROXY_MANAGER_EMAIL=admin@example.com
NGINX_PROXY_MANAGER_PASSWORD=

# GitHub Integration (Optional)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_WEBHOOK_SECRET=

# GitLab Integration (Optional)
GITLAB_CLIENT_ID=
GITLAB_CLIENT_SECRET=
GITLAB_WEBHOOK_SECRET=

# Sentry Error Tracking (Optional)
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=1.0

# Telescope Configuration
TELESCOPE_ENABLED=false

# Performance & Optimization
CACHE_TTL=3600
METRICS_RETENTION_DAYS=30
LOG_RETENTION_DAYS=90
BACKUP_RETENTION_DAYS=30
